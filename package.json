{
  "name": "belote",
  "version": "1.0.0",
  "type": "module",
  "description": "Classic Belote card game implemented in TypeScript with PixiJS",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "howler": "^2.2.4",
    "pixi.js": "^7.3.2",
    "seedrandom": "^3.0.5"
  },
  "devDependencies": {
    "@types/howler": "^2.2.11",
    "@types/seedrandom": "^3.0.8",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitest/coverage-v8": "^1.4.0",
    "@vitest/ui": "^1.4.0",
    "eslint": "^8.57.0",
    "happy-dom": "^13.10.1",
    "prettier": "^3.2.5",
    "typescript": "^5.4.2",
    "vite": "^5.1.6",
    "vitest": "^1.4.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "belote",
    "card-game",
    "typescript",
    "pixijs",
    "pwa",
    "game"
  ],
  "author": "Belote Game Team",
  "license": "MIT"
}
